	"components": {
		"schemas": {
			"UserId": {
				"type": "string",
				"example": "5e91e2c77a7117279f42d003"
			},
			"Email": {
				"type": "string",
				"format": "email",
				"example": "johnsmith@exmaple.com"
			},
			"Password": {
				"type": "string",
				"format": "password",
				"minLength": 8,
				"example": "1234"
			},
			"Role": {
				"type": "string",
				"enum": ["user", "admin"],
				"example": "user"
			},
			"Name": {
				"type": "string",
				"example": "John Smith"
			},
			"Token": {
				"type": "string",
				"example": "abc"
			},
			"Auth": {
				"type": "object",
				"properties": {
					"email": {
						"$ref": "#/components/schemas/Email"
					},
					"password": {
						"$ref": "#/components/schemas/Password"
					}
				},
				"required": ["email", "password"],
				"additionalProperties": false
			},
			"User": {
				"type": "object",
				"properties": {
					"email": {
						"$ref": "#/components/schemas/Email"
					},
					"name": {
						"$ref": "#/components/schemas/Name"
					},
					"role": {
						"$ref": "#/components/schemas/Role"
					},
					"userId": {
						"$ref": "#/components/schemas/UserId"
					}
				},
				"required": ["email", "name", "role"],
				"additionalProperties": false
			},
			"Register": {
				"type": "object",
				"properties": {
					"email": {
						"$ref": "#/components/schemas/Email"
					},
					"password": {
						"$ref": "#/components/schemas/Password"
					},
					"name": {
						"$ref": "#/components/schemas/Name"
					},
					"role": {
						"type": "string",
						"enum": ["user"],
						"example": "user"
					}
				},
				"required": ["email", "password", "name", "role"],
				"additionalProperties": false
			},
			"Create": {
				"type": "object",
				"properties": {
					"email": {
						"$ref": "#/components/schemas/Email"
					},
					"password": {
						"$ref": "#/components/schemas/Password"
					},
					"name": {
						"$ref": "#/components/schemas/Name"
					},
					"role": {
						"$ref": "#/components/schemas/Role"
					}
				},
				"required": ["email", "password", "name", "role"],
				"additionalProperties": false
			},
			"Update": {
				"type": "object",
				"properties": {
					"email": {
						"$ref": "#/components/schemas/Email"
					},
					"password": {
						"$ref": "#/components/schemas/Password"
					},
					"name": {
						"$ref": "#/components/schemas/Name"
					},
					"role": {
						"$ref": "#/components/schemas/Role"
					}
				},
				"required": ["email", "name", "role"],
				"additionalProperties": false
			},
			"TokenResponse": {
				"type": "object",
				"properties": {
					"accessToken": {
						"$ref": "#/components/schemas/Token"
					},
					"refreshToken": {
						"$ref": "#/components/schemas/Token"
					}
				},
				"required": ["accessToken", "refreshToken"],
